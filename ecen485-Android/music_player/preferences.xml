<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Personal info">
        <EditTextPreference
            android:key="uName"
            android:title="Display Name"
            android:summary="Click to enter your display name"
            android:dialogTitle="What should I call you?"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="App Preferences">
        <ListPreference
            android:key="genre"
            android:title="Favorite Genre"
            android:summary="Click to pop up a list to choose from"
            android:entries="@array/genre"
            android:entryValues="@array/genreV"
            android:dialogTitle="Choose your preferred genre" />

        <SwitchPreference
            android:key="welcome"
            android:title="Greeting"
            android:summary="Would you like this app to greet you?"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>